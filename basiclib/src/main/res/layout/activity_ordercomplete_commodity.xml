<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/orderComplete_title"
        layout="@layout/home_title_layout"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/orderComplete_payStatus_rl"
                layout="@layout/basic_paystatus"></include>
            <include
                android:id="@+id/orderCancel_receiverInfo_rl"
                layout="@layout/receiverinfo"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="@dimen/dp_10">

            </include>
            <include
                android:id="@+id/orderComplete_commodityInfo_rl"
                layout="@layout/commodityinfo"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"></include>

            <include layout="@layout/commoditypriceinfo"
                android:id="@+id/orderComplete_commodityPriceInfo_rl"></include>

            <include layout="@layout/basic_orderinfo_commdity"
                android:id="@+id/orderComplete_commodityOrderInfo_rl"></include>

            <TextView
                android:id="@+id/tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="如有疑问致电：258—658953 "
                android:textColor="@color/colorGray3"
                android:textSize="13sp" />

            <Button
                android:id="@+id/orderComplete_buyAgain_btn"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/buyagain_btn_bg"
                android:text="再次购买"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>