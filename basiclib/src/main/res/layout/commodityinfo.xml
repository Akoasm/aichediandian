<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/commodityImage_iv"
        android:background="@mipmap/background"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/commodityName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/commodityImage_iv"
        android:text="ssssss"
        android:textColor="@color/colorGray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/commodityCount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/commodityName_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/commodityImage_iv"
        android:text="x1"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/commodityPrice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/commodityCount_tv"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorOrange"
        android:textSize="18sp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/order_payMoney_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/commodityCount_tv"
        android:layout_toLeftOf="@id/commodityPrice_tv"
        android:text="价格：￥"
        android:textColor="@color/colorOrange"
        android:textSize="15sp" />
</RelativeLayout>