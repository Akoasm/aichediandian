<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/pop_commodityImage_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/order_payMoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/colorOrange"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/pop_commodityImage_iv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/pop_commodityName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_payMoney_tv"
            android:layout_toRightOf="@+id/pop_commodityImage_iv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorGray"/>
        <ImageView
            android:id="@+id/pop_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:layout_alignParentRight="true"
            android:paddingTop="15dp"
            android:paddingRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"
        android:layout_marginLeft="15dp"></View>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal"
        >
        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textColor="@color/font_color"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <!--减号-->
            <RelativeLayout
                android:id="@+id/pop_brand_confim_order_amount_reduce"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/right_angle_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_amount_reduce" />
            </RelativeLayout>
            <!--数量-->
            <EditText
                android:id="@+id/activity_confim_order_sureorder_edit"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_angle_border"
                android:digits="1234567890"
                android:gravity="center"
                android:maxLength="3"
                android:maxLines="1"
                android:inputType="number"
                android:text="1"
                android:textColor="@color/font_color"
                android:textSize="15dp" />
            <!--加号-->
            <RelativeLayout
                android:id="@+id/pop_brand_confim_order_amount_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/right_angle_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_amount_plus" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/confirmOrder_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@mipmap/confrimorder_bg"
        android:text="确认订单"/>
</LinearLayout>