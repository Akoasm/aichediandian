<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/basic_normal_title" />
    <com.sinata.rwxchina.basiclib.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--技师介绍-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/health_technician_introduce_headpor"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/health_technician_introduce_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小一"
                        android:textColor="@color/font_color"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/health_technician_introduce_ranks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="4444"
                        android:textColor="@color/text_hint"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>
            <!--擅长-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/health_technician_introduce_genius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="12345678"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

            </LinearLayout>
            <!--商铺信息-->
            <include android:id="@+id/technician_name" layout="@layout/basic_merchants_name" />
            <!--地址信息-->
            <include android:id="@+id/technician_information" layout="@layout/basic_contact_information" />
            <!--用户评论-->
            <include android:id="@+id/technician_comment" layout="@layout/basic_user_evaluation" />
        </LinearLayout>
    </com.sinata.rwxchina.basiclib.view.MyScrollView>

</LinearLayout>