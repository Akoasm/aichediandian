<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_voucher_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/entertainment_voucher"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/item_cash_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_voucher_img"
            android:text="@string/cash_voucher"
            android:textColor="@color/font_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_voucher_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_cash_voucher"
            android:layout_below="@id/item_voucher_img"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorGray3"
            android:textSize="12sp"
            android:text="周一至周四" />

        <TextView
            android:id="@+id/item_voucher_money"
            android:layout_below="@id/item_voucher_condition"
            android:layout_alignLeft="@id/item_cash_voucher"
            android:layout_marginTop="6dp"
            android:text="￥78"
            android:textColor="@color/colorOrange"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/item_voucher_realmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_voucher_money"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_voucher_money"
            android:textColor="@color/font_color"
            android:textSize="14sp"
            android:text="代100元" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_voucher_detail_ll"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/item_voucher_copies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售210份"
            android:textColor="@color/colorGray3"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/item_voucher_detail"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/entertainment_voucher_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
