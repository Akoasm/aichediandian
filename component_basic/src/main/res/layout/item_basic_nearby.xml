<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nearby_item_img"
            android:scaleType="centerCrop"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@mipmap/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nearby_item_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nearby_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小郡肝串串"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/nearby_item_rating"
                    style="@style/myRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:max="5"
                    android:numStars="5"
                    android:progress="5" />

                <TextView
                    android:id="@+id/nearby_item_ratingnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/pingjia_ratbar"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/pingjia_ratbar"
                    android:text="(5分)"
                    android:textColor="@color/colorOrange"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nearby_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="成华区"
                android:textColor="@color/font_color"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>