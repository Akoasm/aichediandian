<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_health_reserve_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三元疗法"
            android:textColor="@color/font_color"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_health_reserve_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90分钟"
                android:textColor="@color/colorGray3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_health_reserve_firstTime"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="@drawable/orange_stoke_line"
                android:text="新客限时最高减7元"
                android:textColor="@color/colorOrange"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/item_health_reserve_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/entertainment_reverse"
        android:text="预定"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/item_health_reserve_btn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_health_reserve_presentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="188元/起"
            android:textColor="@color/colorOrange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_health_reserve_originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="278元/起"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />

    </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>