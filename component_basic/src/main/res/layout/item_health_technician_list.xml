<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_health_technician_list_img"
            android:scaleType="centerCrop"
            android:layout_width="168dp"
            android:layout_height="150dp"
            android:src="@mipmap/background" />

        <TextView
            android:id="@+id/item_health_technician_list_name"
            android:text="李小一"
            android:textSize="13sp"
            android:textColor="@color/font_color"
            android:layout_below="@id/item_health_technician_list_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_health_technician_list_ranks"
            android:text="高级按摩师"
            android:padding="3dp"
            android:textSize="9sp"
            android:textColor="@color/text_hint"
            android:layout_below="@id/item_health_technician_list_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/technician_text_shape"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>