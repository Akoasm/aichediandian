<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_ktv_reserve_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三元疗法"
                android:textColor="@color/font_color"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢唱"
                    android:visibility="gone"
                    android:textColor="@color/text_hint"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_ktv_reserve_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    android:text="6小时+酒水套餐"
                    android:textColor="@color/colorOrange"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/item_ktv_reserve_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_gradient_horizontal_right"
            android:text="预定"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/item_ktv_reserve_btn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_ktv_reserve_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥188.00"
                android:textColor="@color/colorOrange"
                android:textSize="15sp" />


        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>