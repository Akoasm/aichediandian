<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rili_quexiao"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/datepicker_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择日期"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/pop_time_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@color/colorOrange"
            android:textSize="15dp" />
    </RelativeLayout>

    <com.sinata.rwxchina.basiclib.view.datepicker.DayPickerView
        android:id="@+id/dpv_calendar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:calendarHeight="320dp"
        app:colorBusyDaysBg="#727272"
        app:colorBusyDaysText="#FFFFFF"
        app:colorCurrentDay="#ff720a"
        app:colorInValidDaysBg="#727272"
        app:colorInValidDaysText="#FFFFFF"
        app:colorNormalDayText="#727272"
        app:colorPreviousDayText="#c6c6c6"
        app:colorSelectedDayBackground="#ff720a"
        app:colorSelectedDayText="@color/selected_day_text"
        app:colorWeekText="#90918f"
        app:colorYearMonthText="#90918f"
        app:enablePreviousDay="false"
        app:headerMonthHeight="50dp"
        app:selectedDayRadius="20dp"
        app:textSizeDay="15sp"
        app:textSizeTag="12sp"
        app:textSizeWeek="13sp"
        app:textSizeYearMonth="15sp" />
</LinearLayout>