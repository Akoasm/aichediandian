<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/white">

    <ImageView
        android:src="@mipmap/background"
        android:scaleType="centerCrop"
        android:id="@+id/popularity_one_image"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <ImageView
        android:id="@+id/popularity_one_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/popularity_one_image"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/entertainment_popularity_one" />

    <TextView
        android:background="@drawable/text_prospect_black"
        android:id="@+id/popularity_one_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/popularity_one_image"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/white" />
</RelativeLayout>