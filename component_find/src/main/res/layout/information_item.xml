<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"

    >
    <LinearLayout
        android:id="@+id/information_item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/information_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冬季汽车蓄电池的保养维护"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/information_item_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车上使用的蓄电池，目前主要有两种，一种是加电解液的铅酸蓄电池，一种是免维护性蓄电池。汽车蓄电池使用寿命"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#7C7C7C"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/information_item_img"
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/back_gauge_10_around"
        >

        <TextView
            android:id="@+id/information_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚更新"
            android:textSize="10dp"
            android:textColor="#999999"

            />
        <TextView
            android:id="@+id/information_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源51汽车"
            android:textSize="10dp"
            android:textColor="#999999"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background"
        ></View>

</LinearLayout>
