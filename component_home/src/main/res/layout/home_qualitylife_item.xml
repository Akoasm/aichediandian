<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/home_qualitylife_left"
        android:orientation="horizontal"
        android:layout_width="10dp"
        android:layout_height="wrap_content">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/home_qualitylife_relative"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/home_qualitylife_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <ImageView
               android:background="@mipmap/background"
                android:scaleType="centerCrop"
                android:id="@+id/home_qualitylife_logo"
                android:layout_width="325dp"
                android:layout_height="80dp" />

    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_toRightOf="@id/home_qualitylife_relative"
        android:id="@+id/home_qualitylife_right"
        android:orientation="horizontal"
        android:layout_width="10dp"
        android:layout_height="wrap_content">
    </LinearLayout>
</RelativeLayout>