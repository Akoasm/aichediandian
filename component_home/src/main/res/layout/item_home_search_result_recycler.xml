<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/item_home_serach_result_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/background" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/item_home_serach_result_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_home_serach_result_image"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <!--名字-->
            <TextView
                android:id="@+id/item_home_serach_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乐翻天"
                android:textColor="@color/font_color"
                android:textSize="16sp" />
            <!--星级-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/item_home_serach_result_ratingnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="5分"
                    android:textColor="@color/colorOrange"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_home_serach_result_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥128.00"
                        android:textColor="@color/colorOrange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/item_home_serach_result_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/人"
                        android:textColor="@color/colorOrange"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_home_serach_result_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中餐"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/text_hint" />

                <TextView
                    android:id="@+id/item_entertainment_list_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingRight="5dp"
                    android:text="成华区府青路"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/text_hint" />
                <TextView
                    android:id="@+id/item_entertainment_list_miles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.74km"
                    android:textColor="@color/text_hint"
                    android:textSize="13sp" />
            </LinearLayout>
            <!--代金券-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/item_home_serach_result_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_home_serach_result_voucher_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/entertainment_list_voucher" />

                <TextView
                    android:id="@+id/item_home_serach_result_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="78元代100元"
                    android:textColor="@color/font_color"
                    android:textSize="13sp" />


            </LinearLayout>
            <!--团购-->
            <LinearLayout
                android:id="@+id/item_home_serach_result_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_home_serach_result_group_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/entertainment_list_group" />

                <TextView
                    android:id="@+id/item_home_serach_result_group_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="78元代100元"
                    android:textColor="@color/font_color"
                    android:textSize="13sp" />


            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>
</LinearLayout>