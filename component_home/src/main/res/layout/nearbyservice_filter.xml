<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/list_screening_synthetical_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/list_screening_synthetical_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离筛选"
                android:textColor="@color/text_hint"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/list_screening_synthetical_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/list_triangle_selection" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/list_screening_search_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/list_screening_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能搜索"
                android:textColor="@color/text_hint"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/list_screening_search_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/list_triangle_selection" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/top_line"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>