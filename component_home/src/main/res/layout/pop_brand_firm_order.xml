<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/pop_brand_firm_order_cancle"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/brand_firm_order_cancle" />
    </RelativeLayout>
    <!--名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/pop_brand_firm_order_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pop_brand_firm_order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥666"
                android:textColor="@color/colorOrange"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pop_brand_firm_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="轮胎"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pop_brand_firm_order_subtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轮胎"
                android:textColor="@color/text_hint"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/background" />
    <!--购买数量-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="35dp"
        android:paddingLeft="15dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="购买数量"
            android:textColor="@color/font_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">
            <!--减号-->
            <RelativeLayout
                android:id="@+id/pop_brand_confim_order_amount_reduce"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/right_angle_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_amount_reduce" />
            </RelativeLayout>
            <!--数量-->
            <EditText
                android:id="@+id/activity_confim_order_sureorder_edit"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/right_angle_border"
                android:digits="1234567890"
                android:gravity="center"
                android:maxLength="3"
                android:maxLines="1"
                android:phoneNumber="true"
                android:text="1"
                android:textColor="@color/font_color"
                android:textSize="15dp" />
            <!--加号-->
            <RelativeLayout
                android:id="@+id/pop_brand_confim_order_amount_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/right_angle_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_amount_plus" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:text="确认订单"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/background_gradient_horizontal_right"
        android:layout_width="match_parent"
        android:layout_height="49dp" />
</LinearLayout>